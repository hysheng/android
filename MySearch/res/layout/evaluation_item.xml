<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/consumer_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/consumer_demo" />

        <TextView
            android:id="@+id/consumer_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="bottom|center_horizontal"
            android:text="皇家七媳妇"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/evaluation_describle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="This is my first time bad experience for shopping!but my girlfriend is very happy,she like this cookies! "
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp" >

        <TextView
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/evaluation_date"
            android:gravity="bottom|center_horizontal"
            android:text="发布于："
            android:textColor="@color/bg_Gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/evaluation_date"
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:text="2016年8月26日"
            android:textColor="@color/bg_Gray"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/bg_Black" />

</LinearLayout>